// backend/prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  username  String
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  notebooks Notebook[]
}

model Notebook {
  id          Int      @id @default(autoincrement())
  title       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  owner       User     @relation(fields: [ownerId], references: [id])
  ownerId     Int
  notes       Note[]
  // collaborators Collaborator[] // Implementación futura
}

model Note {
  id        Int     @id @default(autoincrement())
  title     String
  
  // --- CAMBIO AQUÍ ---
  // Añadido el campo para el contenido de la nota
  content   String? @default("")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  notebook  Notebook @relation(fields: [notebookId], references: [id])
  notebookId Int
  // tags      NoteTag[] // Implementación futura
}


// backend/prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  username      String
  password      String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  
  // Relaciones
  notebooks     Notebook[]     // Notebooks que posee (Owner)
  collaborations Collaborator[] // Notebooks donde colabora
}

model Notebook {
  id          Int      @id @default(autoincrement())
  title       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Propietario
  owner       User     @relation(fields: [ownerId], references: [id])
  ownerId     Int
  
  // Contenido
  folders     Folder[]
  notes       Note[]
  
  // Colaboradores (Nueva Relación)
  collaborators Collaborator[]
}

// --- NUEVO MODELO: Colaboradores ---
model Collaborator {
  id         Int      @id @default(autoincrement())
  
  // Quién colabora
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  
  // En qué notebook
  notebook   Notebook @relation(fields: [notebookId], references: [id], onDelete: Cascade)
  notebookId Int
  
  // Permisos (Por ahora default a EDITOR para simplificar)
  permission String   @default("EDITOR") // "VIEWER", "EDITOR"
  
  createdAt  DateTime @default(now())

  // Asegura que un usuario no sea colaborador duplicado en el mismo notebook
  @@unique([userId, notebookId])
}

model Folder {
  id          Int      @id @default(autoincrement())
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  notebook    Notebook @relation(fields: [notebookId], references: [id], onDelete: Cascade)
  notebookId  Int
  
  parentId    Int?
  parent      Folder?  @relation("FolderHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children    Folder[] @relation("FolderHierarchy")
  
  notes       Note[]
}

model Note {
  id        Int     @id @default(autoincrement())
  title     String
  content   String? @default("")
  type      String  @default("markdown")
  language  String? @default("javascript")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  notebook   Notebook @relation(fields: [notebookId], references: [id], onDelete: Cascade)
  notebookId Int
  
  folder     Folder?  @relation(fields: [folderId], references: [id], onDelete: Cascade)
  folderId   Int?
}
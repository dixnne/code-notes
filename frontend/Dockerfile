# --- Stage 1: Build ---
# Actualizamos la versi칩n de Node a una compatible con Vite
FROM node:20-alpine AS builder

WORKDIR /app

COPY package*.json ./
RUN npm cache clean --force && npm install --legacy-peer-deps

COPY . .

ENV NODE_OPTIONS="--max-old-space-size=2048"

# Genera la build de producci칩n de React
RUN npm run build

# --- Stage 2: Production ---
FROM nginx:stable-alpine

# Copia los archivos est치ticos generados por React al directorio de Nginx
COPY --from=builder /app/dist /usr/share/nginx/html

# Nginx escuchar치 en el puerto 80 dentro del contenedor por defecto
EXPOSE 80

# Inicia Nginx
CMD ["nginx", "-g", "daemon off;"]

